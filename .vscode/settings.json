{
    // applies to search too
    "files.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/.astro": true
    },
    "search.exclude": {
        "package-lock.json": true,
        "pnpm-lock.yaml": true,
        "yarn.lock": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "prettier.documentSelectors": ["**/*.astro"],
    "[astro][json][jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "astro"],
    "typescript.tsdk": "node_modules/typescript/lib",
    "files.associations": {
        "*.mdx": "markdown"
    },
    "tailwindCSS.experimental.classRegex": [
        ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
        ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
    ],
    // "gitlens.currentLine.enabled": false,
    "cSpell.words": ["astro", "giscus"],
    "workbench.colorCustomizations": {
        "activityBar.background": "#0a8c5ff0",
        "titleBar.activeBackground": "#0a8c5ff0",
        "titleBar.activeForeground": "#F6FBFA",
        "statusBar.background": "#0a8c5ff0"
    },
    "eslint.useFlatConfig": true,
    "typescript.tsserver.watchOptions": {
        "watchDirectory": "useFsEvents",
        "fallbackPolling": "dynamicPriorityPolling",
        "watchFile": "useFsEventsOnParentDirectory",
        "synchronousWatchDirectory": true
    },
    "js/ts.implicitProjectConfig.checkJs": true
}
