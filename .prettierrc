{
    "plugins": ["prettier-plugin-astro", "@ianvs/prettier-plugin-sort-imports"],
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "overrides": [
        {
            "files": ["**/*.astro"],
            "options": { "parser": "astro" }
        }
    ]
}
