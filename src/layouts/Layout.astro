---
import HeaderNav from './HeaderNav.astro'
// Side effects
import '../styles/blog/index.css'
import '../styles/photos.css'
import '../styles/site/globals.css'
import '../styles/site/scss/style.css'

const { title = '', keywords = [] } = Astro.props
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{`${title ? `${title} - ` : ''}Craig Patik`}</title>
        {keywords && keywords.length > 0 ? <meta name="keywords" content={keywords.join(',')} /> : null}
        <link rel="me" href="https://mastodon.online/@craigpatik" />
        <link rel="stylesheet" href="https://use.typekit.net/tfz6xpv.css" />
    </head>
    <body>
        <div style={{ display: 'flex', flexDirection: 'column', minHeight: '100%' }}>
            <div style={{ width: '100%', maxWidth: '1020px', alignSelf: 'center', flexGrow: 1, marginBottom: '2rem' }}>
                <HeaderNav />
                <slot />
            </div>
        </div>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
