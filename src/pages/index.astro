---
import { Image } from 'astro:assets'
import NetherlandsImage from '../images/britain-benelux-netherlands-link.jpg'
import BritainBeneluxImage from '../images/home-britain-benelux.jpg'
import CodeLogo from '../images/home-console-blog-logo.png'
import GithubLogo from '../images/home-github-logo.png'
import MastodonAvatar from '../images/home-mastodon-avatar.png'
import TravelImageAll from '../images/home-travel-all.jpg'
import TravelImageGermany from '../images/home-travel-germany.jpg'
import TravelImageGreece from '../images/home-travel-greece.jpg'
import TravelImagePeruArgentina from '../images/home-travel-peru-argentina.jpg'
import TravelImageSpain from '../images/home-travel-spain.jpg'
import TravelImageTurkey from '../images/home-travel-turkey.jpg'
import imgHomeTwitterCraigpatikAvatar from '../images/home-twitter-craigpatik-avatar.jpg'
import imgHomeConsoleBlogLogo from '../images/icons/blog/ios/AppIcon@3x.png'
import imgHomeDoFLogo from '../images/icons/depth-of-field/ios/AppIcon@3x.png'
import imgWithinViewportFLogo from '../images/icons/within-viewport/ios/AppIcon@3x.png'
import TravelImageParis from '../images/travel-paris.jpg'
import TravelImageUzbekistan from '../images/uzbekistan-khiva-night.jpg'
import Layout from '../layouts/Layout.astro'
---

<Layout>
    <div role="main">
        <p>
            I’m <a href="/about">Craig Patik</a>, a traveler, web developer, and Arsenal fan based in Munich, Germany.
        </p>

        <section>
            <h2>Travel</h2>
            <div class="cp-row button-link-list">
                <div class="cp-item-third">
                    <a href="/travel/">
                        <Image
                            src={TravelImageAll}
                            alt="Standing aside the Andean Explorer train"
                            title="Andean Explorer, Peru"
                            width={48}
                            height={48}
                        />
                        <span>All Trips</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a href="/travel/uzbekistan/">
                        <Image
                            src={TravelImageUzbekistan}
                            alt="The façade of a mausoleum at night"
                            title="Mausoleum in Khiva"
                            width={48}
                            height={48}
                        />
                        <span>Uzbekistan</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a href="/travel/britain/">
                        <Image
                            src={BritainBeneluxImage}
                            alt="Big Ben, a black cab, and a red double-decker bus in Parliament Square"
                            title="London, England"
                            width={48}
                            height={48}
                        />
                        <span>Britain</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a href="/travel/peru/">
                        <Image
                            src={TravelImagePeruArgentina}
                            alt="Kim holding a lamb and posing with two Andean women in their traditionl clothing"
                            title="Kim holding a lamb in Cusco, Peru"
                            width={48}
                            height={48}
                        />
                        <span>Peru</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a href="/travel/spain/">
                        <Image
                            src={TravelImageSpain}
                            alt="Celebrating Spain's World Cup victory in Madrid"
                            title="Celebrating Spain's World Cup victory in Madrid"
                            width={48}
                            height={48}
                        />
                        <span>Spain</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a href="/travel/turkey/">
                        <Image
                            src={TravelImageTurkey}
                            alt="The Blue Mosque (Sultanahmet Camii), Istanbul, Turkey"
                            title="The Blue Mosque (Sultanahmet Camii), Istanbul, Turkey"
                            width={48}
                            height={48}
                        />
                        <span>Turkey</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a href="/travel/germany/">
                        <Image
                            src={TravelImageGermany}
                            alt="Spanish fans gathering in Vienna's Ststephensplatz"
                            title="Spanish fans in Vienna for Euro 2008"
                            width={48}
                            height={48}
                        />
                        <span>Germany</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a href="/travel/greece/">
                        <Image
                            src={TravelImageGreece}
                            alt="View of the coast of Serifios, Greece from a ferry"
                            title="Serifios, Greece"
                            width={48}
                            height={48}
                        />
                        <span>Greece</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a href="/travel/france/">
                        <Image
                            src={TravelImageParis}
                            alt="Kim and I in front of the Eiffel Tower"
                            title="Paris, France"
                            width={48}
                            height={48}
                        />
                        <span>France</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a href="/travel/netherlands/">
                        <Image
                            src={NetherlandsImage}
                            alt="Westerkerk overlooking an Amsterdam canal"
                            title="Amsterdam, Netherlands"
                            width={48}
                            height={48}
                        />
                        <span>Netherlands</span>
                    </a>
                </div>
            </div>
        </section>

        <section>
            <h2>Web design &amp; development</h2>

            <div class="cp-row button-link-list">
                <div class="cp-item-third">
                    <a href="https://github.com/patik">
                        <Image src={GithubLogo} alt="" title="GitHub" width={48} height={48} />
                        <span>GitHub</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a href="/code/">
                        <Image src={CodeLogo} alt="" title="Code & projects" width={48} height={48} />
                        <span>Code &amp; projects</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a href="/blog/">
                        <Image src={imgHomeConsoleBlogLogo} alt="" title="Blog" width={48} height={48} />
                        <span>Blog</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a href="https://patik.github.io/within-viewport/">
                        <Image src={imgWithinViewportFLogo} width={48} height={48} alt="" />
                        <span>Within Viewport</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a href="/dof/">
                        <Image src={imgHomeDoFLogo} alt="" title="Depth of Field Calculator" width={48} height={48} />
                        <span>Depth of Field Calculator</span>
                    </a>
                </div>
            </div>
        </section>

        <section>
            <h2>Outlets</h2>

            <div class="cp-row button-link-list">
                <div class="cp-item-third">
                    <a rel="me" href="https://twitter.com/craigpatik">
                        <Image
                            src={imgHomeTwitterCraigpatikAvatar}
                            alt="Craig riding on a camel"
                            title="@craigpatik"
                            width={48}
                            height={48}
                        />
                        <span>Twitter</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a rel="me" href="https://mastodon.online/@craigpatik">
                        <Image
                            src={MastodonAvatar}
                            alt="Craig in front of a street mural in Northern Ireland"
                            title="@craigpatik@mastodon.online"
                            width={48}
                            height={48}
                        />
                        <span>Mastodon</span>
                    </a>
                </div>
                <div class="cp-item-third">
                    <a rel="me" href="https://www.facebook.com/craigpatik">
                        <Image
                            src={imgHomeTwitterCraigpatikAvatar}
                            alt="Craig riding on a camel"
                            title="Facebook profile"
                            width={48}
                            height={48}
                        />
                        <span>Facebook</span>
                    </a>
                </div>
            </div>
        </section>
    </div>
</Layout>
